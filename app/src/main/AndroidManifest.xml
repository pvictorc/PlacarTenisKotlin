<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!-- Always include this permission -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Placar_tenis">
        <activity
            android:name="ufc.smd.placar_tenis.PermissionActivity"
            android:exported="false" />
        <activity
            android:name="ufc.smd.placar_tenis.PlacarActivity"
            android:exported="false" />
        <activity
            android:name="ufc.smd.placar_tenis.PreviousGamesActivity"
            android:exported="false" />
        <activity
            android:name="ufc.smd.placar_tenis.ConfigActivity"
            android:exported="false" />
        <activity
            android:name="ufc.smd.placar_tenis.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>